{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "**/*.test.ts", "dist"]
}
